{
  "name": "follownotifybot",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start_web": "jest && node ./bin/www",
    "start_cron": "jest && node cron.js",
    "start": "jest && npm run start:server",
    "start:server": "pm2 reload ecosystem.config.js",
    "start:server:fly": "pm2 kill && pm2 start ecosystem.config.js --no-daemon",
    "dev": "DEBUG=follownotifybot:* nodemon -e js,twig ./bin/www",
    "dev:cron": "DEBUG=follownotifybot:* nodemon cron.js",
    "test": "jest --watch"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^9.0.2",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "log4js": "^6.3.0",
    "md5": "^2.3.0",
    "mongoose": "^5.12.9",
    "morgan": "~1.9.1",
    "node-cron": "^3.0.0",
    "p-ratelimit": "^1.0.1",
    "ratelimit.js": "^1.8.0",
    "redis": "^3.1.2",
    "request": "^2.88.2",
    "twig": "~0.10.3",
    "twit": "^2.2.11"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "jest": "^26.6.3",
    "nodemon": "^2.0.22",
    "pm2": "^5.3.0",
    "supertest": "^6.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
